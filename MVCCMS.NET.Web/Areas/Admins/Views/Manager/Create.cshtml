
@model MVCCMS.NET.Model.Manager

@{
    ViewBag.Title = "Create";
    Layout = null;
    var managerRoleList = ViewBag.ManagerRoleList as List<MVCCMS.NET.Model.ManagerRole>;
}

<div class="bjui-pageContent tableContent">
    <div class="bjui-doc">
        @*<h3 class="page-header">页面说明</h3>
            <blockquote>
                <p>提示</p>
            </blockquote>
            <blockquote class="point">
                <p>提示2</p>
            </blockquote>*@
        <form action="@Url.Action("Create")" data-toggle="validate">
            @Html.AntiForgeryToken()
            <table class="table table-bordered table-striped table-condensed table-hover" width="100%">
                <tbody>
                    @Html.ValidationSummary(true , "" , new { @class = "text-danger" })
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.RoleId , new { @class = "control-label x85" , @for = "RoleId" })
                            <select name="RoleId" id="RoleId" data-toggle="selectpicker">
                                @{
                                    foreach (var item in managerRoleList)
                                    {
                                        <option value="@item.Id">@item.RoleName</option>
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Username , new { @class = "control-label x85" , @for = "Username" })
                            <input type="text" name="Username" id="Username" value="" data-rule="required;Username;remote[@Url.Action("VerifyUserName","AdminsTools")]" size="15">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Password , new { @class = "control-label x85" , @for = "Password" })
                            <input type="password" name="Password" id="Password" value="" data-rule="密码:required" size="15">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.Label("确认密码" , new { @class = "control-label x85" , @for = "Password" })
                            <input type="password" name="Password2" id="Password2" value="" data-rule="确认密码:required;match(Password)" size="15">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Nickname , new { @class = "control-label x85" , @for = "Nickname" })
                            <input type="text" name="Nickname" id="Nickname" value="" data-rule="required" size="15">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Description , new { @class = "control-label x85" , @for = "Description" })
                            <textarea name="Description" id="Description" value="" data-rule="required" size="15"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.IsSystem , new { @class = "control-label x85" , @for = "IsSystem" })
                            <input type="radio" name="IsSystem" id="IsSystem1" data-toggle="icheck" value="true" data-rule="checked" data-label="是">
                            <input type="radio" name="IsSystem" id="IsSystem2" data-toggle="icheck" value="false" data-label="否">
                        </td>
                    </tr>
                    
                    
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.IsLock , new { @class = "control-label x85" , @for = "IsLock" })
                            <input type="radio" name="IsLock" id="IsLock1" data-toggle="icheck" value="true" data-rule="checked" data-label="是">
                            <input type="radio" name="IsLock" id="IsLock2" data-toggle="icheck" value="false" data-label="否">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<div class="bjui-pageFooter">
    <ul>
        <li><button type="button" class="btn-close" data-icon="close">取消</button></li>
        <li><button type="submit" class="btn-default" data-icon="save">保存</button></li>
    </ul>
</div>

