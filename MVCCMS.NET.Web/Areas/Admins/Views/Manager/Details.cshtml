
@using MVCCMS.NET.Web.Areas.Admins.Controllers
@model MVCCMS.NET.Model.Manager

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<div class="bjui-pageContent tableContent">
    <div class="bjui-doc">
